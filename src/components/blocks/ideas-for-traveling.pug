                    .ideas-for-traveling__card-main
                        .ideas-for-traveling__card-line.flex
                            .ideas-for-traveling__card-cube(style= card.cube)
                            .ideas-for-traveling__card-tag= card.tag
                        .ideas-for-traveling__card-date= card.data
                        .ideas-for-traveling__card-title= card.title
                        .ideas-for-traveling__card-text
