    .container
        article.ideas-for-traveling__block.grid
            .ideas-for-traveling__title
                .bold-title Идеи для путешествий
            each card in cards_data
                article.ideas-for-traveling__post-card
                    a(href="#")
                        .ideas-for-traveling__card-img
