    var routes = [
        ["Тель-Авив", "Стамбул", "Тбилиси", "Барселона", "Варшава"],
        ["Вильнюс", "Прага", "Венеция", "Будапешт", "Мадрид"],
        ["Амстердам", "Дубай", "Москва", "Санкт-Петербург", "Германия"],
        ["Грузия", "Израиль", "Россия", "США", "Бангкок"]
