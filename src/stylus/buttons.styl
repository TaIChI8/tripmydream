.btn
  display inline-block
  height 48px
  padding 0 20px
  background $dark-amber
  border none
  border-radius 3px
  font-size 18px
  font-weight 700
  color $light
  text-align center
  transition background .2s, color .2s
  white-space nowrap
  &:hover
    background #ff8e1f
    cursor pointer
  &:active
    background #f36f00

.btn-blue 
  background $deep-blue
  &:hover
    background #48A9ED
  &:active
    background $cornflower     

.btn-size
  height 58px
.btn-indent
  padding 0 50px