.btn
  display inline-block
  height 48px
  padding 0 20px
  background $dark-amber
  border-radius 3px
  font-size 18px
  font-weight 700
  color #FFF
  text-align center
  transition background .2s, color .2s
  white-space nowrap
  &:hover
    background $btn-hover
  &:active
    background $btn-active