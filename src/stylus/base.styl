*
  box-sizing border-box
  &:before, &:after
    box-sizing border-box

body
  min-width 320px
  height 100%
  margin 0
  font-size 13px
  font-family Roboto, Arial, sans-serif
  line-height 1.3
  overflow-x hidden
  position relative

ul
  list-style-type none
  margin 0
  padding 0

a
  color $dark
  font-size 14px
  text-decoration none

.img-responsive
  display block
  max-width 100%
  height auto

.text-center
  text-align center

.grid
  display grid

.flex
  display flex

.container
  max-width 1160px
  margin auto
  padding 0 $gutter

.landing-section
  padding 60px 0
  title()

.landing-section-min
  padding 40px 0
  title()

.obsolete
  text-decoration line-through